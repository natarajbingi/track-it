<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--it start-->
    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
        <item name="android:textSize">18sp</item>
        <!--        <item name="android:width"></item>-->
    </style>

    <style name="LoaderDialog" parent="android:Theme.Holo.Dialog.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <!--        <item name="android:width"></item>-->
    </style>

    <style name="AppTheme.alertSuccess" parent="Theme.MaterialComponents.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/button_success_text</item>
        <item name="android:textSize">20sp</item>
        <!--        <item name="android:width"></item>-->
    </style>

    <!--it end-->
    <style name="DefaultButton" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="purpoleButton" parent="AppTheme">
        <item name="android:background">@drawable/btn_bg_purpole</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purpol</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="greenButton" parent="AppTheme">
        <item name="android:background">@drawable/btn_bg_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/button_success_text</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="blueButton" parent="AppTheme">
        <item name="android:background">@drawable/btn_bg_blue</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/start_color</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="greyButton" parent="AppTheme">
        <item name="android:background">@drawable/btn_bg_grey</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/monsoon</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>


    <style name="WarningButton" parent="AppTheme">
        <item name="android:background">@color/button_default</item>
        <item name="android:textColor">@color/button_default_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="DangerButton" parent="AppTheme">
        <item name="android:background">@color/button_danger</item>
        <item name="android:textColor">@color/button_danger_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="SuccessButton" parent="AppTheme">
        <item name="android:background">@color/button_success</item>
        <item name="android:textColor">@color/button_success_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="MyTextView" parent="AppTheme">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="TextViewHeader" parent="AppTheme">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">6dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--R-View style Starts-->

    <!-- Activity themes -->

    <style name="Theme.Base" parent="android:Theme.Light" />

    <style name="Theme.Sample" parent="Theme.Base" />

    <!--    <style name="AppTheme" parent="Theme.Sample" />-->
    <!-- Widget styling -->

    <style name="Widget" />

    <style name="Spinner.Underlined" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">@color/oil</item>
    </style>

    <style name="Widget.SampleMessage">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Widget.SampleMessageTile">
        <item name="android:background">@drawable/tile</item>
        <item name="android:shadowColor">#7F000000</item>
        <item name="android:shadowDy">-3.5</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!--R-View style Ends-->
</resources>
