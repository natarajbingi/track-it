<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--it start-->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/primary</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/iron</item>
        <item name="android:background">@color/primary</item>
        <!--        <item name="android:width"></item>-->
    </style>

    <!--it end-->
    <style name="DefaultButton" parent="AppTheme">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>


    <style name="WarningButton" parent="AppTheme">
        <item name="android:background">@color/button_default</item>
        <item name="android:textColor">@color/button_default_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="DangerButton" parent="AppTheme">
        <item name="android:background">@color/button_danger</item>
        <item name="android:textColor">@color/button_danger_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="SuccessButton" parent="AppTheme">
        <item name="android:background">@color/button_success</item>
        <item name="android:textColor">@color/button_success_text</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="MyTextView" parent="AppTheme">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
    </style>
</resources>
