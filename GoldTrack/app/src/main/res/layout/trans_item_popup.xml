<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="popUpTrans"
            type="com.a.goldtrack.trans.TransPopupVIewModel" />
    </data>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tiles_light"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/final_layout_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/light_me">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/background"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_one_"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nbfcReferenceNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:text="ReferenceNo: Dyu_4565431315416"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="customer"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/commodity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="commodity"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/selectedTextCommodityPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Price"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_me"
                android:padding="4dp"
                android:text="Total Weights" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalCommodityWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Cmd Weight"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalStoneWastage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Stone Wst"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalOtherWastage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Other Wst"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalNettWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="Total Net Weight"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nettAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="nettAmount"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/grossAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="grossAmount"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="totalAmount"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/marginPercent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="marginPercent"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/marginAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="marginAmount"
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/referencePicData"
                    android:layout_width="0dp"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:text="referencePicData"
                    android:textColor="@color/oil" />


            </LinearLayout>

            <TextView
                android:id="@+id/itemsDataRepeat"
                style="@style/blueButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_me"
                android:padding="8dp"
                android:text="ITEMS: \n\nChain-01  22Grms Rs. 120000.0\nChain-01  22Grms Rs. 120000.0"
                android:textColor="@color/oil" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/paidAmountForRelease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Paid Amount For Release *"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/roundOffAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Round Off Amount *"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Comments *"
                    android:padding="8dp"
                    android:text=""
                    android:textColor="@color/oil"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <Button
                        android:id="@+id/TestButton"
                        style="@style/blueButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DISMISS"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout></layout>